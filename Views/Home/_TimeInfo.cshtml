@using Smart_OrdreMission.Models
@using System.Text.Json
@{
    @model PersonFormViewModel

}


<!--Card-->
<h2 class="font-sans font-bold break-normal text-gray-700 px-2 pb-8 text-xl">Time Info</h2>

<div id='section3' class="p-8 mt-6 lg:mt-0 rounded shadow bg-white">

    <!--object mission-->

    <div class="md:flex mb-6">
        <div class="md:w-1/3">
            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4 bo" for="my-textarea">
                 Mission object :
            </label>
        </div>
        <div class="md:w-2/3">
            <input asp-for=mission.MissionObject type="text"  class="form-control" />

        </div>



    </div>
    <!--Numero Ordre Mission-->

    <div class="md:flex mb-6">
        <div class="md:w-1/3">
            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4 bo" for="my-textarea">
                Numero ref Mission : 
            </label>
        </div>
        <div class="md:w-2/3">
            <input asp-for=mission.ReferenceOrdreMission type="number"  class="form-control" />

        </div>



    </div>

    <!--date creation Mission-->

     <div class="md:flex mb-6">
            <div class="md:w-1/3">
                <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4 bo" for="my-textarea">
                    Date creation ordre de mission
                </label>
            </div>
            <div class="md:w-2/3">
            <input asp-for=mission.DateOfPaperIsuue type="date"  class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <input asp-for=mission.DateTimeOfNow type="hidden"  class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />

            </div>

            
            
        </div>

    <!--date start Mission-->

    <div class="md:flex mb-6">
        <div class="md:w-1/3">
            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4 bo" for="my-textarea">
                Date debut de mission
            </label>
        </div>
        <div class="md:w-2/3">
            <input asp-for=mission.DateStartMission type="date" class="form-control"  value="@DateTime.Now.ToString("yyyy-MM-dd")" />

        </div>



    </div>

    <!--date end Mission-->

    <div class="md:flex mb-6">
        <div class="md:w-1/3">
            <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4 bo" for="my-textarea">
                Date fin de mission
            </label>
        </div>
        <div class="md:w-2/3">
            <input asp-for=mission.DateFinishMission type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />

        </div>



    </div>

    <!--muti select-->
     <div class="md:flex mb-6">
            <div class="md:w-1/3">
                <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-multiselect">
                    Multi Select
                </label>
            </div>
            <div class="md:w-2/3  ">
                <select class="form-multiselect border-4 border-grey-500 block w-full" multiple id="my-multiselect">
                    <option>Option 1</option>
                    <option>Option 2</option>
                    <option>Option 3</option>
                    <option>Option 4</option>
                    <option>Option 5</option>
                </select>
                <p class="py-2 text-sm text-gray-600">add notes about populating the field</p>
            </div>
        </div>

    <!--save button-->

    <div class="md:flex md:items-center">
        <div class="md:w-1/3"></div>
        <div class="md:w-2/3">
            <button type="submit" class="shadow bg-yellow-700 hover:bg-yellow-500 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="button">
                Save
            </button>
        </div>
    </div>


</div>
<!--/Card-->
